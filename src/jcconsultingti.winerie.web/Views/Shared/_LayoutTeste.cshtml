<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Exemplo de uso do MySQL com ASP.Net MVC</title>
    <link href="~/Content/teste/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/teste/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/teste/modernizr-2.6.2.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Pessoas", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Home")">Home</a></li>
                </ul>
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Exemplo de uso do MySQL com ASP.Net MVC - <a href="http://jcconsultingti.com.br">JC Consulting TI</a></p>
        </footer>
    </div>

    <script src="~/Scripts/teste/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/teste/bootstrap.min.js"></script>
</body>
</html>