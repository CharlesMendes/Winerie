                        </div>
                        <div class="clearfix"></div>
                        <div class="separator">
                            <!-- <p class="change_link">Voce e novo aqui ?
                              <a href="#signup" class="to_register"> Crie sua conta </a>
                            </p> -->
                            <div class="clearfix"></div>
                            <br />
                            <div>
                                &copy; @DateTime.Now.Year - Todos os direitos reservados. <br />
                                <a href="http://www.jcconsultingti.com.br" target="_blank">@ViewBag.Desenvolvedor</a>
                            </div>
                        </div>
                    }
                </section>
            </div>
